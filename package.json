{
  "name": "linter-glsl",
  "main": "./lib/linter-glsl",
  "version": "2.1.3",
  "description": "Adds linting for GLSL shaders.",
  "repository": "https://github.com/AtomLinter/linter-glsl",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-message-panel": "^1.2.4",
    "atom-package-deps": "^4.3.1",
    "which": "^1.2.12"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.2.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  },
  "package-deps": [
    "linter"
  ]
}
