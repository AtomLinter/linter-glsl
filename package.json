{
  "name": "linter-glsl",
  "main": "./lib/linter-glsl",
  "version": "2.2.0",
  "description": "Adds linting for GLSL shaders.",
  "repository": "https://github.com/AtomLinter/linter-glsl",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-message-panel": "1.3.0",
    "atom-package-deps": "5.0.0",
    "which": "1.3.1"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "jasmine-fix": "1.3.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ]
  },
  "package-deps": [
    "linter:2.0.0"
  ]
}
